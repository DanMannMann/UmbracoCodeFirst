<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@RenderSection("title")</title>
</head>
<body>
	
	<div id="header">
		<a href="@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))">Home</a>
	</div>

	@RenderBody()

	<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.2.0.min.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.form.min.js")"></script>
	<script type="text/javascript">
		$(document).ready(function () {
			AjaxItUpABit($('#MainForm'));
		});

		function AjaxItUpABit(form) {
			form.ajaxForm({
				data: { isAjax: true },
				target: form,
				replaceTarget: true,
				success: function (a, formElement) {
					AjaxItUpABit($('#MainForm'));
				}
			});
		}
	</script>
</body>
</html>